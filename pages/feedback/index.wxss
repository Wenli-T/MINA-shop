page {
  background-color: #eee;
}
.fb_main {
  padding: 20rpx;
  color: #666;
}
.fb_main .fb_tips {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}
.fb_main .fb_tips text {
  width: 30%;
  background-color: #fff;
  margin: 10rpx;
  text-align: center;
  padding: 10rpx;
}
.fb_main .fb_content {
  margin-top: 20rpx;
  background-color: #fff;
}
.fb_main .fb_content textarea {
  padding: 20rpx;
  font-size: 26rpx;
}
.fb_main .fb_content .fb_tool {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 20rpx;
}
.fb_main .fb_content .fb_tool button {
  width: 80rpx;
  height: 80rpx;
  margin: 0;
  font-size: 50rpx;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  color: #ccc;
}
.fb_main .fb_content .fb_tool .up_img_item {
  margin-left: 20rpx;
}
.fb_main .form_btn_wrap {
  margin-top: 20rpx;
}
.fb_main .form_btn_wrap button {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: var(--themeColor);
  color: white;
  margin-right: 0;
  width: 30%;
  font-size: 30rpx;
  font-weight: normal;
}
.fb_main .form_btn_wrap button icon {
  margin-right: 10rpx;
}
