page {
  background-color: #dedede;
  padding: 20rpx;
}
.search_row {
  height: 60rpx;
  display: flex;
}
.search_row input {
  flex: 1;
  height: 100%;
  background-color: #fff;
  padding-left: 30rpx;
}
.search_row .search_btn {
  width: 110rpx;
  height: 100%;
  margin-left: 10rpx;
}
.search_row .search_btn button {
  width: 100%;
  height: 100%;
  font-size: 26rpx;
  background-color: #fff;
  padding: 13rpx;
}
.search_content {
  margin-top: 20rpx;
}
.search_content .search_item {
  background-color: #fff;
  border-bottom: 1rpx solid #ccc;
  padding: 15rpx 10rpx;
  font-size: 26rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
